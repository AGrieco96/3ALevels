<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".other.OptionActivity">
    <!-- Sound settings -->

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kenvector_future_thin"
                    android:padding="8dp"
                    android:text="SoundSetting"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/sound_enable_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kenvector_future_thin"
                    android:text="YES"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/sound_volume_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:padding="8dp"
                android:progress="50"
                android:progressTint="@color/black"
                android:thumb="@drawable/blue_sliderup" />
        </LinearLayout>

        <!-- Graphics settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kenvector_future_thin"
                android:padding="8dp"
                android:text="Graphics Settings"
                android:textColor="@color/design_default_color_on_secondary"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/graphics_quality_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_normal"
                android:minWidth="200dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:popupBackground="@drawable/button_normal" />
        </LinearLayout>

        <!-- Language settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kenvector_future_thin"
                android:padding="8dp"
                android:text="Language Settings"
                android:textColor="@color/design_default_color_on_secondary"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/language_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_normal"
                android:minWidth="200dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:popupBackground="@drawable/button_normal" />
        </LinearLayout>

        <!-- Notification settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kenvector_future_thin"
                android:padding="8dp"
                android:text="Notification Settings"
                android:textColor="@color/design_default_color_on_secondary"
                android:textStyle="bold" />
            <!--
            <Spinner
                android:id="@+id/notification_tone_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_normal"
                android:minWidth="200dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:popupBackground="@drawable/button_normal" />>
-->
            <CheckBox
                android:id="@+id/notification_enable_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kenvector_future_thin"
                android:text="YES"
                android:textColor="@color/design_default_color_on_secondary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_exitNoSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Cancel"
                android:minWidth="200dp"
                android:minHeight="48dp"
                app:srcCompat="@drawable/red_cross" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_play"
                android:fontFamily="@font/kenvector_future_thin"
                android:minWidth="200dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="SAVE"
                android:textColor="@color/design_default_color_on_secondary" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>